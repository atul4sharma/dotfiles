{
    "languageserver": {
        "clangd": {
            "command": "/usr/local/opt/llvm/bin/clangd",
            "arguments": ["-std=c++17"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/"],
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp", "h", "hpp"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/clang"
                }
            }
        }
    }
}
